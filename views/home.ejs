<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="/css/home.css">
  <title>My Account</title>
</head>
<body>
  <div class="container">

    <div class="header">
      <h1>My Account</h1>
      <a href="/add-transaction" class="btn btn-primary">Add Transaction</a>
    </div>

    <div class="card">
      <p>Current Balance</p>
      <h2 id="balance">$<%= balance.toLocaleString() %></h2>
    </div>

    <div class="card">
      <h2>Recent Transactions</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Amount</th>
            <th>Type</th>
            <th>Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% transactions.forEach(t => { %>
            <tr>
              <td><%= t.title %></td>
              <td class="<%= t.type === 'Income' ? 'income' : 'expense' %>">
                <%= t.type === 'Income' ? '+' : '-' %>$<%= Math.abs(t.amount).toFixed(2) %>
              </td>
              <td><%= t.type %></td>
              <td><%= t.date %></td>
              <td class="actions">
                <a href="/edit/<%= t.id %>" class="edit">‚úèÔ∏è</a>
                <a href="/delete/<%= t.id %>" class="delete">üóëÔ∏è</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

  </div>
</body>
</html>
